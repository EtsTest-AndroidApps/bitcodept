<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_info"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:srcCompat="@drawable/ic_round_info_24"
        android:tint="@color/card_border"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/local_image_scanning_info"
        android:lineSpacingMultiplier="1.1"
        android:padding="24dp"
        android:gravity="start"
        android:fontFamily="@font/betmrounded_light"
        android:textColor="@color/card_border"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/image_view_info"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_select_image"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="@color/background"
        android:fontFamily="@font/betmrounded_regular"
        android:padding="16dp"
        android:text="@string/select_image"
        android:textColor="@color/card_border"
        android:textSize="14sp"
        app:cornerRadius="18dp"
        app:rippleColor="@color/card_border"
        app:strokeColor="@color/card_border"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_info_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>